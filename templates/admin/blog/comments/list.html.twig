{% extends 'admin/base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
        <tr class="active">
            <th>{{'Text'|trans}}</th>
            <th>{{'Created at'|trans}}</th>
            <th>{{'Actions'|trans}}</th>
        </tr>
        </thead>

        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.text }}</td>
                <td>{{ comment.createdAt|date('m/d/y') }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('admin.blog.comment.edit', {id: comment.id}) }}" class="btn btn-default">{{'Edit'|trans}}</a>
                        </li>

                        <li>
                            <form method="post" action="{{ path('admin.blog.comment.delete', {id: comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                <button class="btn btn-danger">{{'Delete'|trans}}</button>
                            </form>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}