{% extends 'admin/base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
        <tr class="active">
            <th>{{'Name'|trans}}</th>
            <th>{{'Author'|trans}}</th>
            <th>{{'Created at'|trans}}</th>
            <th>{{'Actions'|trans}}</th>
        </tr>
        </thead>

        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.name }}</td>
                <td>{{ topic.author }}</td>
                <td>{{ topic.createdAt|date('m/d/y') }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('admin.blog.edit', {id: topic.id}) }}" class="btn btn-default">{{'Edit'|trans}}</a>
                        </li>

                        <li>
                            {#                            <a href="#" class="btn btn-danger">Delete</a>#}
                            <form method="post" action="{{ path('admin.blog.delete', {id: topic.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.id) }}">
                                <button class="btn btn-danger">{{'Delete'|trans}}</button>
                            </form>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin.blog.create') }}" class="btn btn-success">{{'Create new'|trans}}</a>

{% endblock %}