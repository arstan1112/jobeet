{% for comment in comments %}
    <div class="well well-lg">
        <div class="row">
            <div class="col-sm-10">
                <h6 class="media-heading">
                    <i>{{ 'User: '|trans }}({{ comment.user }})</i>
                </h6>
            </div>

            <div class="col-sm-2">
                <i class="pull-right">{{ 'posted on %date%'|trans({'%date%':comment.createdat|date('m/d/y')}) }}</i>
            </div>
        </div>

        <p>{{ comment.text }}</p>

        <div class="row">
        </div>
    </div>
    <br>
{% endfor %}
