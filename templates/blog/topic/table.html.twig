{% for topic in topics %}
    <div class="panel panel-default blockContainer">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6">{{ topic.name }}</div>
                <div class="col-md-6 text-right">
                    {{ topic.author }}<br>
                    {{ topic.createdat|date('d/m/y') }}
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-10">
                    <div>
                        {{ topic.summary }}
                    </div>
                </div>

                <div class="col-md-2 text-right">

                    {% for image in topic.blogImages %}
                        {% if loop.first %}
                            <img class="media-object" style="width:100px; height:100px;" src="{{ asset(blog_web_directory ~ '/' ~ image.name) }}">
                            <br>
                        {% endif %}
                    {% endfor %}

