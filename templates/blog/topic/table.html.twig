{% for topic in topics %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6">{{ topic.name }}</div>
                <div class="col-md-6 text-right">
                    {{ topic.author }}<br>
                    {{ topic.createdat|date('d/m/y') }}
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-10">
                    <div>
                        {{ topic.summary }}
                    </div>
                </div>

                <div class="col-md-2 text-right">
                    {% for image in topic.blogImages %}
                        <img class="media-object" style="width:100px; height:100px;" src="{{ asset(blog_web_directory ~ '/' ~ image.name) }}">
                        <br>
                    {% endfor %}
                </div>
            </div>


            <br>
            {% for hashTag in topic.blogTopicHashTags %}
                <a href="{{ path('blog.hash.show', {id:hashTag.id}) }}">
                    #{{ hashTag.name }}
                </a>
            {% endfor %}
            <br>
            <p>
                <a href="{{ path('blog.show', {id: topic.id}) }}">Read more...</a>
            </p>
        </div>
    </div>
{% endfor %}
