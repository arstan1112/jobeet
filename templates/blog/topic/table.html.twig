<table class="table text-center">
    <thead>
    <tr>
        <th class="active text-center">{{'Topic'|trans}}</th>
        <th class="active text-center">{{'Author'|trans}}</th>
    </tr>
    </thead>

    <tbody>
    {% for topic in topics %}
        <tr>
            <td>
                <a href="{{ path('blog.show', {id: topic.id}) }}">{{ topic.name }}</a>
            </td>
            <td>{{ topic.author }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
